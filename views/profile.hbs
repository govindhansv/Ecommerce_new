<div class="container">
    <div class="home">
        <div class="row">
            <h3 class="welcome">welcome {{user.name}},</h3>
            {{#if user}}
            <a class="btn logout btn-danger" href="/users/logout">logout</a>
            {{/if}}
        </div>
        <form action="/users/updateprofile/{{user._id}}" method="post" class="edit">
            <div class="row name">
                <h1>Name: </h1>
                <input type="text" class="name-input" name="name" value="{{user.name}}">
            </div>
            <div class="row about">
                <h1>About: </h1>
                <textarea class="about-input" maxlength="60" type="text" name="about"
                    rows="3"> {{user.about}} </textarea>
            </div>
            <button type="submit" class="update btn btn-success"> Update </button>
            <img id="img" src="/images/{{user._id}}.jpg">
        </form>
    </div>
</div>

<form class="bot-div" action="/upload" method="post" enctype="multipart/form-data">
    <input type="text" value="{{user._id}}" name="userid" hidden>
    <input id="file" onchange="form.submit()" type="file" name="image" hidden>
    <label for="file">+</label>
</form>


