<div class="container">
<div class="row">

    {{#each blogs}}
    <div class="blog-div col-12 col-md-5 ">
        <img class="blog-img" src="{{this.imgurl}}">
        <div class="text">
            <a href="/users/blog/{{this._id}}">
                <h5>{{this.title}}</h5>
                <a href="/section/{{this.section}}">
                    <h6>{{this.section}}</h6>
                </a>
            </a>
            <div class="author">
                <img src="/images/{{this.userid}}.jpg" alt="image">
                <h4> {{this.name}}</h4>
                <a style="margin-left: 10px;" href="/users/delete/{{this._id}}">D</a>
                <a style="margin-left: 10px;" href="/users/edit/{{this._id}}">E</a>
            </div>
        </div>
    </div>
    {{/each}}

</div>
</div>




