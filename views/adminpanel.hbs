<div class=" row">
    <div class="allblogs">

        <h1>allblogs</h1>
        <div class="collection-list mt-4 row gx-0 gy-3">

            {{#each blogs}}


            <div class="col-md-6 col-lg-4 col-xl-3 p-2 best">
                <div class="collection-img position-relative">
                    <img src="/images/c_formal_gray_shirt.png" class="w-100" />
                    <span
                        class="position-absolute bg-primary text-white d-flex align-items-center justify-content-center">sale</span>
                </div>
                <div class="text-center">
                    <div class="rating mt-3">
                        <span class="text-primary"><i class="fas fa-star"></i></span>
                        <span class="text-primary"><i class="fas fa-star"></i></span>
                        <span class="text-primary"><i class="fas fa-star"></i></span>
                        <span class="text-primary"><i class="fas fa-star"></i></span>
                        <span class="text-primary"><i class="fas fa-star"></i></span>
                    </div>
                    <p class="text-capitalize my-1">{{this.name}} </p>
                    <a href="/users/products/{{this._id}}">
                        <h5>{{this.title}}</h5>
                    </a>

                    <span class="fw-bold">$ {{this.price}} </span>
                    <br>
                    <a href="/view-product/" class="btn btn-primary mt-3">Buy</a>
                </div>
            </div>
            <a style="margin-left: 10px;" href="/admin/{{this._id}}">O</a>
            {{/each}}
        </div>


    </div>
    <div class="allusers">

        <h1>all users</h1>

        {{#each users}}
        <div class="blog-divs">
            <div class="text">
                <div class="author">
                    <img src="https://images.pexels.com/photos/4965133/pexels-photo-4965133.jpeg?auto=compress&cs=tinysrgb&h=650&w=940"
                        alt="image">
                    <a href="/users/profile/{{this._id}}">
                        <h4> {{this.name}}</h4>
                        <a style="margin-left: 10px;" href="/deleteuser/{{this._id}}">O</a>
                    </a>
                </div>
            </div>
        </div>
        {{/each}}


    </div>
</div>




